{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@wdio/globals/types", "@wdio/cucumber-framework"]
  },
  "include": ["examples/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "compilerOptions": {
      "noImplicitAny": false,
      "strict": false,
      "strictNullChecks": false
    }
  }
}
